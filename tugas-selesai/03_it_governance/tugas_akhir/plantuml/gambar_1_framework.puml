@startuml Framework_Tata_Kelola_TI_SATRIAMART
skinparam monochrome true
skinparam backgroundColor #FFFFFF
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam shadowing false
skinparam rectanglePadding 20
skinparam rectangleBorderThickness 1
skinparam ArrowThickness 1

title Kerangka Kerja Tata Kelola TI SATRIAMART\n(Berbasis COBIT 2019)

package "LAPISAN 1: STRUKTUR TATA KELOLA" {
    component "Direktur\n(Strategis)" as DIR
    component "Manajer TI\n(Taktis)" as MGR
    component "Staf TI\n(Operasional)" as STAFF
    
    DIR -down-> MGR
    MGR -down-> STAFF
    
    note right of DIR
        • Menyetujui Kebijakan
        • Alokasi Sumber Daya
        • Selera Risiko
    end note
    
    note right of MGR
        • Implementasi Kerangka Kerja
        • Manajemen Risiko
        • Pemantauan KPI
    end note
    
    note right of STAFF
        • Operasional Harian
        • Pemantauan
        • Respons Insiden
    end note
}

package "LAPISAN 2: DOMAIN COBIT 2019" {
    rectangle "EDM03\nMemastikan\nOptimalisasi\nRisiko" as EDM03
    rectangle "APO12\nMengelola\nRisiko" as APO12
    rectangle "DSS01\nMengelola\nOperasi" as DSS01
    rectangle "MEA01\nMemantau,\nMengevaluasi &\nMenilai" as MEA01
}

package "LAPISAN 3: LIMA KOMPONEN KUNCI" {
    rectangle "1. Kerangka Kebijakan & Prosedur\n• Kebijakan Manajemen Risiko\n• Kebijakan Keamanan\n• Pencadangan & Pemulihan\n• Manajemen Perubahan" as COMP1
    
    rectangle "2. Kerangka Manajemen Risiko\n• Daftar Risiko\n• Asesmen Risiko\n• Rencana Mitigasi" as COMP2
    
    rectangle "3. Manajemen Kinerja\n• Dasbor KPI\n• Perangkat Pemantauan\n• Pelaporan" as COMP3
    
    rectangle "4. Keunggulan Operasional\n• Dokumentasi SOP\n• Manajemen Insiden\n• ITSM" as COMP4
    
    rectangle "5. Perbaikan Berkelanjutan\n• Tinjauan & Audit\n• Pembelajaran\n• Optimalisasi" as COMP5
}

rectangle "TINGKAT KEMATANGAN 1.2 → 3.0 (Terkelola)\n• Penurunan Insiden TI: 60%\n• Keselarasan TI-Bisnis: 75%\n• Optimalisasi Sumber Daya: 40%" as OUTPUT

STAFF -down-> EDM03
STAFF -down-> APO12
STAFF -down-> DSS01
STAFF -down-> MEA01

EDM03 -down-> COMP1
APO12 -down-> COMP2
DSS01 -down-> COMP4
MEA01 -down-> COMP3

COMP1 -down-> OUTPUT
COMP2 -down-> OUTPUT
COMP3 -down-> OUTPUT
COMP4 -down-> OUTPUT
COMP5 -down-> OUTPUT

@enduml
